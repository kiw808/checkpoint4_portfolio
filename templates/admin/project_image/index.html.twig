    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_image in project_images %}
            <tr>
                <td>{{ project_image.id }}</td>
                <td>{{ project_image.imageName }}</td>
                <td>{{ project_image.updatedAt ? project_image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_project_image_show', {'id': project_image.id}) }}">show</a>
                    <a href="{{ path('admin_project_image_edit', {'id': project_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    #}
{% endblock %}
