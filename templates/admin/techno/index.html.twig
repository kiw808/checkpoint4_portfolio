{% extends 'admin/base.html.twig' %}

{% block title %}Techno index{% endblock %}

{% block body %}
    <h1>Techno index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for techno in technos %}
            <tr>
                <td>{{ techno.id }}</td>
                <td>{{ techno.name }}</td>
                <td>{{ techno.type }}</td>
                <td>{{ techno.description }}</td>
                <td>{{ techno.image }}</td>
                <td>
                    <a href="{{ path('admin_techno_show', {'id': techno.id}) }}">show</a>
                    <a href="{{ path('admin_techno_edit', {'id': techno.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_techno_new') }}">Create new</a>
{% endblock %}
